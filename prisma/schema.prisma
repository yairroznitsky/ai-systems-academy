// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

enum BadgeCode {
  MODULE_1_COMPLETE
  MODULE_2_COMPLETE
  MODULE_3_COMPLETE
  MODULE_4_COMPLETE
  MODULE_5_COMPLETE
  MODULE_6_COMPLETE

  RAG_BUILDER
  AGENT_ARCHITECT
  AUTOMATION_ENGINEER
  QA_GUARDIAN
  COURSE_COMPLETE
}

model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Guest-mode key stored in cookie. Optional because you may add real auth later.
  guestKey  String?  @unique

  progress  UserLessonProgress[]
  badges    UserBadge[]
}

model Module {
  id          String   @id @default(cuid())
  orderIndex  Int      @unique
  title       String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  lessons     Lesson[]
}

model Lesson {
  id            String   @id @default(cuid())
  orderIndex    Int      @unique // 1..20
  moduleId      String
  title         String
  timeMinutes   Int      @default(7)
  overview      String   // short summary
  contentJson   String   // store bullets/examples/takeaways as JSON string
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  module        Module   @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  quiz          Quiz?
  userProgress  UserLessonProgress[]

  @@index([moduleId])
}

model Quiz {
  id        String   @id @default(cuid())
  lessonId  String   @unique
  passScore Int      @default(80) // percent
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  lesson    Lesson   @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  questions Question[]
}

model Question {
  id            String   @id @default(cuid())
  quizId        String
  orderIndex    Int
  prompt        String
  explanation   String?  // shown after answering
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  quiz          Quiz     @relation(fields: [quizId], references: [id], onDelete: Cascade)
  choices       Choice[]

  @@unique([quizId, orderIndex])
  @@index([quizId])
}

model Choice {
  id          String   @id @default(cuid())
  questionId  String
  orderIndex  Int
  text        String
  isCorrect   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  question    Question @relation(fields: [questionId], references: [id], onDelete: Cascade)

  @@unique([questionId, orderIndex])
  @@index([questionId])
}

model UserLessonProgress {
  id          String   @id @default(cuid())
  userId      String
  lessonId    String

  // Tracking
  status      String   @default("LOCKED") // LOCKED | UNLOCKED | COMPLETED
  bestScore   Int      @default(0)        // 0..100
  attempts    Int      @default(0)
  lastScore   Int      @default(0)
  passed      Boolean  @default(false)

  unlockedAt  DateTime?
  completedAt DateTime?
  updatedAt   DateTime @updatedAt
  createdAt   DateTime @default(now())

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  lesson      Lesson   @relation(fields: [lessonId], references: [id], onDelete: Cascade)

  @@unique([userId, lessonId])
  @@index([userId])
  @@index([lessonId])
}

model UserBadge {
  id        String    @id @default(cuid())
  userId    String
  code      BadgeCode
  earnedAt  DateTime  @default(now())

  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, code])
  @@index([userId])
}
